include 'emu8086.inc'
org 100h

; add your code here

call strnglen
call searching


ret

string db 'Hello World$', 0
char db 'l$', 0

mov si, 0

strnglen proc

mov cl, string[si]
mov bx, 0
l:
inc bx
loop l
ret

endp strnglen

mov si, 0

searching proc
mov cl, string[si]
mov al, char
mov dx, 0
l2:
cmp cl, al
je l1
loop l2
ret

l1:
inc dx
ret

endp searching





